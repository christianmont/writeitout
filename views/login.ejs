<%
    if(!username) {
        var username="";
    }
    if(!password) {
        var password="";
    }
%>
<div class="center-flex">
    <div class="login-form-holder">
        <div class="login-form">
            <form action="login" method="post">
                <a class="form-logo" href="/">WriteItOut</a>
                <h2 class="text-center">Log in</h2>   
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" name="username" placeholder="Username" value="<%=username%>" required="required">				
                    </div>
                </div>
                <% if(noUser) { %>
                    <div class="form-msg">This user does not exist</div>
                <% } %>
                <div class="form-group">
                    <div class="input-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="<%=password%>" required="required">				
                    </div>
                </div>
                <% if(incorrectPword) { %>
                    <div class="form-msg">Your password is incorrect</div>
                <% } %>  
                <div class="form-group">
                    <button type="submit" class="btn btn-primary login-btn btn-block">Sign in</button>
                </div>
                <div class="clearfix">
                    <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
                    <a href="/forgot-password" class="pull-right">Forgot Password?</a>
                </div>
                <div class="or-seperator"><i>or</i></div>
                <p class="text-center">Login with your social media account</p>
                <div class="text-center social-btn">
                    <a href="/auth/google" class="btn btn-danger"><i class="fa fa-google"></i>&nbsp; Google</a>
                </div>
            </form>
            <p class="text-center text-muted small bottom-msg">Don't have an account? <a href="/sign-up">Sign up here!</a></p>
        </div>
    </div>
</div>
<style>
    .center-flex {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        padding-top: 66px;
        display: flex;
        justify-content: center;
    }

    .login-form-holder {
        padding: 20px;
    }

    .login-form {
        width: 385px;
    }

    .login-form form {        
        margin-bottom: 15px;
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    .form-logo {
        color: black;
        display: block;
        font-weight: bold;
        font-size: 16px;
        margin-left: 10px;
        text-decoration: none;
        margin: 0 auto 14px auto;
        width: fit-content;
    }
    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 12px !important;
    }
    form .form-group .input-group input {
        margin-right: 10px;
        padding: 2px 10px;
        font-size: 14px;
        border-radius: 2px;
    }
    .form-group .input-group input:last-of-type {
        margin-right: 0;
    }
    .clearfix .checkbox-inline input[type=checkbox]{
        position: relative;
        vertical-align: middle;
        bottom: 1px;
    }
    .login-btn {
        font-size: 15px;
        font-weight: bold;
    }
    .social-btn .btn {
        border: none;
        margin: 10px 2px 0;
        opacity: 1;
    }
    .social-btn .btn:hover {
        opacity: 0.9;
    }
    .social-btn .btn-primary {
        background: #507cc0;
    }
    .social-btn .btn-info {
        background: #64ccf1;
    }
    .social-btn .btn-danger {
        background: #df4930;
    }
    .or-seperator {
        margin-top: 20px;
        text-align: center;
        border-top: 1px solid #ccc;
    }
    .or-seperator i {
        padding: 0 10px;
        background: #f7f7f7;
        position: relative;
        top: -11px;
        z-index: 1;
    }
</style>